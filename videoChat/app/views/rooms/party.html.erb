<head>
  <meta charset="UTF-8">
  <title><%= @room.name %></title>
</head>

<body>
  <div id="invitation">Invite your friends! Share the url of this page http://52.8.54.5/videoChat/party/<%= @room.id %></div>
  
  <div id="videobox">
  </div>
  
  <script src='//static.opentok.com/v2/js/opentok.min.js'></script>
  <script>
    var apiKey =  "<%= @apiKey %>";
    var sessionId = "<%= @room.sessionId %>";
    var token = "<%= @tok_token %>";
        
    OT.setLogLevel(OT.DEBUG);
    var session = OT.initSession(apiKey, sessionId);
    session.addEventListener('sessionConnected', sessionConnectedHandler);
    session.addEventListener('streamCreated', streamCreatedHandler);
    session.connect(token);
    
    var publisher;
    function sessionConnectedHandler(event) {
      publisher = OT.initPublisher('videobox', {width:500, height:400});
      session.publish(publisher);
     
      for (var i = 0; i < event.streams.length; i++) {
        if (event.streams[i].connection.connectionId != session.connection.connectionId) 
        {
          subscribeToStreams(event.streams[i]);
        }
      }
    }

    function streamCreatedHandler(event) {
      for (var i = 0; i < event.streams.length; i++) {
        if (event.streams[i].connection.connectionId != session.connection.connectionId) 
        {
          subscribeToStreams(event.streams[i]);
        }
      }
    }

    function subscribeToStreams(stream) {
      var div = document.createElement('div');
      div.setAttribute('id', 'stream' + stream.streamId);
      document.body.appendChild(div);
      session.subscribe(stream, div.id, {width:500, height:400});
    }
  </script>
</body>
